{
  "compilerOptions": {
    "incremental": true,
    "target": "es2018",
    "module": "ES6",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true // TODO might re-enable lib checks
  }
}
